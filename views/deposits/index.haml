.line-max-medium
  .line.bg-green.color-white.bg-pattern1
    .col7
      .separator10
      .line-compress
        %h1 Deposits
      .separator10

    .col3
      .right-content
        %button.btn.bg-lightgreen.font-medium.color-muted.no-padding{ data: { toggle: "overlay_section" } }
          .separator15
          .separator2
          %i.fa.fa-plus
          Deposit funds
          .separator15

.line-max-medium.bg-white
  .separator10


  .line-compress
    %h1 Deposits
    
    - deposits = Deposit.all(user_id: current_user.id)
    - if deposits == []
      There are no deposits.
    - for deposit in deposits
      / #{deposit.id} 
      .row €#{deposit.amount.f_eur} #{deposit.created_at.time_f}
  .separator10
